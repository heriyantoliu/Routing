<mvc:View
	controllerName="sap.ui.demo.nav.controller.SPK.Unit"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Table id="UnitTable"
			items="{Unit}"
			itemPress="onItemPressed">		
		<columns>
			<Column><Text text="Unit"/></Column>			
		</columns>
		<items>
			<ColumnListItem type="Active">
				<cells>
					<Text text="{Kodeunit}"/>					
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>